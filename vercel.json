{
  "version": 2,
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/", "dest": "/templates/index.html" },
    { "src": "/about", "dest": "/templates/about.html" },
    { "src": "/home", "dest": "/templates/home.html" },
    { "src": "/login", "dest": "/templates/login.html" },
    { "src": "/login/", "dest": "/templates/login.html" },
    { "src": "/(.*)\\.html", "dest": "/templates/$1.html" },
    { "src": "/(.*)", "dest": "myproject/wsgi.py" },
    { "src": "/.*", "dest": "/templates/404.html" }  // ใช้สำหรับ fallback
  ]
}
